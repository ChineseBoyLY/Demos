<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <data>
    <!--如果遇到类名称相同的 可以使用别名alias ,或者直接在variable中直接引用,使用不同的name值-->
    <import type="com.example.databinding.Utils"/>
    <import type="com.example.databinding.R"/>
    <import type="android.view.View"/>

    <variable
        name="user"
        type="com.example.databinding.ObservableUser"
        />
    <variable
        name="handlers"
        type="com.example.databinding.MyHandlers"
        />

  </data>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@{user.adult ? @color/colorAccent : @color/colorPrimary}"
      android:orientation="vertical"
      android:paddingLeft="@{user.padding}"
      >
    <!--基本使用-->
    <TextView
        android:id="@+id/ddd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:padding="10dp"
        android:text="@{user.lastName}"
        />

    <!--双向绑定使用 @= -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:padding="10dp"
        android:text="@={user.lastName}"
        />

    <!--使用静态方法-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:onClick="@{handlers::onClickFriend}"
        android:onLongClick="@{handlers::onLongClickFriend}"
        android:padding="10dp"
        android:text="@{Utils.Converte(user.lastName)}"
        />

    <!--下面这个等价于 android:text="@{user.displayName != null ? user.displayName : user.lastName}"-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@{user.firstName ?? user.lastName}"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@{user.firstName}"
        android:visibility="@{user.adult ? View.VISIBLE : View.GONE}"
        />

    <!--自定义绑定使用-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:error="@{R.drawable.ic_launcher_background}"
        app:imageUrl="@{user.firstName}"
        />
  </LinearLayout>
</layout>
