<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#f5f5f5"
      android:orientation="vertical"
      android:padding="16dp"
      tools:context=".MainActivity"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:gravity="right"
          android:text="爱奇艺纳逗"
          />
      <EditText
          android:id="@+id/times_aiqiyi"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="16dp"
          android:layout_weight="1"
          android:background="@null"
          android:digits="1234567890"
          android:gravity="center_vertical"
          android:inputType="numberDecimal"
          android:padding="10dp"
          android:text="25"
          />
      <ImageView
          android:id="@+id/delete_aiqiyi"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="8dp"
          android:padding="12dp"
          android:src="@drawable/ic_delete_black"
          android:tint="#999999"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:gravity="right"
          android:text="好看视频"
          />
      <EditText
          android:id="@+id/times_haokan"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="16dp"
          android:layout_weight="1"
          android:background="@null"
          android:digits="1234567890"
          android:gravity="center_vertical"
          android:inputType="numberDecimal"
          android:padding="10dp"
          android:text="5"
          />
      <ImageView
          android:id="@+id/delete_haokan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="8dp"
          android:padding="12dp"
          android:src="@drawable/ic_delete_black"
          android:tint="#999999"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:gravity="right"
          android:text="今日头条"
          />
      <EditText
          android:id="@+id/times_jinritoutiao"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="16dp"
          android:layout_weight="1"
          android:background="@null"
          android:digits="1234567890"
          android:gravity="center_vertical"
          android:inputType="numberDecimal"
          android:padding="10dp"
          android:text="25"
          />
      <ImageView
          android:id="@+id/delete_jinritoutiao"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="8dp"
          android:padding="12dp"
          android:src="@drawable/ic_delete_black"
          android:tint="#999999"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:gravity="right"
          android:text="东方头条"
          />
      <EditText
          android:id="@+id/times_dongfangtoutiao"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="16dp"
          android:layout_weight="1"
          android:background="@null"
          android:digits="1234567890"
          android:gravity="center_vertical"
          android:inputType="numberDecimal"
          android:padding="10dp"
          android:text="50"
          />
      <ImageView
          android:id="@+id/delete_dongfangtoutiao"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="8dp"
          android:padding="12dp"
          android:src="@drawable/ic_delete_black"
          android:tint="#999999"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:gravity="right"
          android:text="聚看点"
          />
      <EditText
          android:id="@+id/times_jukandian"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="16dp"
          android:layout_weight="1"
          android:background="@null"
          android:digits="1234567890"
          android:gravity="center_vertical"
          android:inputType="numberDecimal"
          android:padding="10dp"
          android:text="50"
          />
      <ImageView
          android:id="@+id/delete_jukandian"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="8dp"
          android:padding="12dp"
          android:src="@drawable/ic_delete_black"
          android:tint="#999999"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:gravity="right"
          android:text="趣头条"
          />
      <EditText
          android:id="@+id/times_qutoutiao"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="16dp"
          android:layout_weight="1"
          android:background="@null"
          android:digits="1234567890"
          android:gravity="center_vertical"
          android:inputType="numberDecimal"
          android:padding="10dp"
          android:text="50"
          />
      <ImageView
          android:id="@+id/delete_qutoutiao"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="8dp"
          android:padding="12dp"
          android:src="@drawable/ic_delete_black"
          android:tint="#999999"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        >
      <TextView
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:gravity="right"
          android:text="重复次数"
          />
      <EditText
          android:id="@+id/times_repeat"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="16dp"
          android:layout_weight="1"
          android:background="@null"
          android:digits="1234567890"
          android:gravity="center_vertical"
          android:inputType="numberDecimal"
          android:padding="10dp"
          android:text="3"
          />
      <ImageView
          android:id="@+id/delete_repeat"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="8dp"
          android:padding="12dp"
          android:src="@drawable/ic_delete_black"
          android:tint="#999999"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/runBtn"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          android:layout_weight="1"
          android:background="#e3e3e3"
          android:foreground="?selectableItemBackground"
          android:gravity="center"
          android:padding="10dp"
          android:text="开始执行"
          />
      <TextView
          android:id="@+id/shutdown"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="12dp"
          android:layout_marginTop="12dp"
          android:layout_weight="1"
          android:background="#e3e3e3"
          android:foreground="?selectableItemBackground"
          android:gravity="center"
          android:padding="10dp"
          android:text="停止执行"
          />
    </LinearLayout>

  </LinearLayout>
</ScrollView>
